// 60 redondas por minuto, osea cada redonda dura 1 seg.
#tempo negra 176
// compas de 2 tiempos y cada tiempo dura 1/2 redonda (1 blanca).
// entonces cada compas puede tener 1 redonda, 2 blancas, 4 negras, etc.
#compas 3/4

const octava_baja = 3;
const octava_central = 4;
const octava_alta = 5;
const grand_piano = 0;

// Tonicas y quintas
voz (grand_piano)
{
    repetir (2)
    {
        repetir (2)
        {
            compas
            {
                nota(mi, octava_central, negra);
                nota(si, octava_central, negra);
                nota(si, octava_central, negra);
            }
        }
        repetir (2)
        {
            compas
            {
                nota(la, octava_baja, negra);
                nota(mi, octava_central, negra);
                nota(mi, octava_central, negra);
            }
        }
    }
    repetir (2)
    {
        repetir (2)
        {
            compas
            {
                nota(fa, octava_central, negra);
                nota(do, octava_alta, negra);
                nota(do, octava_alta, negra);
            }
        }
        repetir (2)
        {
            compas
            {
                nota(do, octava_central, negra);
                nota(la, octava_central, negra);
                nota(la, octava_central, negra);
            }
        }
    }
}

// Terceras
voz (grand_piano)
{
    repetir (2)
    {
        repetir (2)
        {
            compas
            {
                silencio(negra);
                nota(sol, octava_central, negra);
                nota(sol, octava_central, negra);
            }
        }
        repetir (2)
        {
            compas
            {
                silencio(negra);
                nota(do, octava_central, negra);
                nota(do, octava_central, negra);
            }
        }
    }
    repetir (2)
    {
        repetir (2)
        {
            compas
            {
                silencio(negra);
                nota(la, octava_central, negra);
                nota(la, octava_central, negra);
            }
        }
        repetir (2)
        {
            compas
            {
                silencio(negra);
                nota(mi, octava_central, negra);
                nota(mi, octava_central, negra);
            }
        }
    }
}